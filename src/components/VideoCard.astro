---
const { day, count, date, videoId, description } = Astro.props;
---

<article class="card">
  <div class="video-container">
    <iframe
      src={`https://www.youtube.com/embed/${videoId}`}
      title={`Reto Flexiones Día ${day}`}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
      loading="lazy"></iframe>
  </div>

  <div class="info">
    <header>
      <span class="badge">Día {day}</span>
      <span class="date">{date}</span>
    </header>
    <h2>{count} Flexiones</h2>
    {description && <p>{description}</p>}
  </div>
</article>

<style>
  .card {
    background: #1e1e1e; /* Color oscuro */
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s;
    color: white;
    border: 1px solid #333;
  }

  .card:hover {
    transform: translateY(-5px);
    border-color: #646cff; /* Acento violeta/azul */
  }

  /* Truco para hacer el iframe responsivo (16:9) */
  .video-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    background: black;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .info {
    padding: 1.5rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .badge {
    background: #646cff;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  .date {
    color: #888;
    font-size: 0.9rem;
  }

  h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  p {
    color: #ccc;
    margin-top: 0.5rem;
    font-size: 0.95rem;
  }
</style>
